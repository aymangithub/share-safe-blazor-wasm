@inject IStringLocalizer<JoinChatConfirmation> L


   

<MudDialog>
    <TitleContent>

        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            @L["Join Chat Confirmation"]
        </MudText>


    </TitleContent>

          

    <DialogContent>
        <MudText>@ContentText</MudText>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Disabled="IsJoining" T="string" Label="@L["Code"]" Variant="Variant.Outlined" @bind-Value="Code"
                              For="@(() => Code)" Required />

            </MudItem>
        </MudGrid>

    </DialogContent>
    <DialogActions>

        <MudButton StartIcon="@Icons.Filled.Cancel" OnClick="IsJoining ? null : Cancel">@L["Cancel"]</MudButton>
        <MudButton StartIcon="@Icons.Filled.Delete" Color="Color.Primary" Variant="Variant.Filled" OnClick="IsJoining ? null : SubmitJoiningCode">@(IsJoining ? @L["Joining"] : @L["Ok"]) </MudButton>
    </DialogActions>
</MudDialog>

@code {


    public string Code { get; set; }
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string? ContentText { get; set; }
    public bool IsJoining { get; set; }
    public string SecondJoinCode { get; set; }
    async void SubmitJoiningCode()
    {
        SecondJoinCode = null;
        IsJoining = true;
        await Task.Delay(2000);
        IsJoining = false;
        MudDialog.Close(DialogResult.Ok(Code));
       
    }
    void Cancel() => MudDialog.Cancel();
  

}