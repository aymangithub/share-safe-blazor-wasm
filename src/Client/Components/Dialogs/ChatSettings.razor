@using FSH.BlazorWebAssembly.Client.Pages.Identity.Account;

@inject IStringLocalizer<Security> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-3 mb-n1" />
            @L["Custom Chat Settings"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h5" >@ContentText</MudText>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudText >
                 
                    @L["Retination Duration"]
                </MudText>
                <MudSelect T="string" Label="" Value="@("Never")" AnchorOrigin="Origin.BottomCenter">
                    <MudSelectItem Value="@("Never")"  />
                    <MudSelectItem Value="@("12 Hours")" />
                    <MudSelectItem Value="@("1 Day")" />
                    <MudSelectItem Value="@("1 Week")" />
                </MudSelect>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudText>

                    @L["Another Option"]
                </MudText>
                <MudSwitch T="bool" @bind-Checked="_settingsModel.SaveChats" Label="@L["Save Chats"]" />
            </MudItem>
        </MudGrid>

     

    </DialogContent>
    <DialogActions>

        <MudButton StartIcon="@Icons.Filled.Cancel" OnClick="Cancel">@L["Cancel"]</MudButton>
        <MudButton StartIcon="@Icons.Filled.Delete" Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@L["Save Settings"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string? ContentText { get; set; }

    [Parameter]
    public string? Title { get; set; }


}